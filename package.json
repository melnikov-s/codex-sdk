{
  "name": "codex-monorepo",
  "private": true,
  "description": "Tools for repo-wide maintenance.",
  "scripts": {
    "release": "pnpm --filter codex-sdk run release",
    "format": "prettier --check *.json *.md .github/workflows/*.yml",
    "format:fix": "prettier --write *.json *.md .github/workflows/*.yml",
    "build": "pnpm --filter codex-sdk run build",
    "test": "pnpm --filter codex-sdk run test",
    "lint": "pnpm --filter codex-sdk run lint",
    "lint:fix": "pnpm --filter codex-sdk run lint:fix",
    "typecheck": "pnpm --filter codex-sdk run typecheck",
    "changelog": "git-cliff --config cliff.toml --output CHANGELOG.ignore.md $LAST_RELEASE_TAG..HEAD",
    "prepare": "husky",
    "husky:add": "husky add"
  },
  "devDependencies": {
    "git-cliff": "^2.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3"
  },
  "resolutions": {
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "semver": "^7.7.1"
  },
  "overrides": {
    "punycode": "^2.3.1"
  },
  "engines": {
    "node": ">=22"
  },
  "lint-staged": {
    "*.json": "prettier --write",
    "*.md": "prettier --write",
    ".github/workflows/*.yml": "prettier --write",
    "**/*.{js,ts,tsx}": [
      "prettier --write",
      "pnpm --filter codex-sdk run lint",
      "cd codex-sdk && pnpm run typecheck"
    ]
  },
  "packageManager": "pnpm@10.10.0"
}
